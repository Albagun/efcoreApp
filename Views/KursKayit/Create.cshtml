@model KursKayit

<h2 style="color: rgb(46, 0, 46); font-family: 'Indie Flower', cursive; font-size: 2em; font-weight: bold; text-decoration: underline;">Kurs Kayıt Ekleme</h2>
<hr></hr>
<form asp-controller="KursKayit" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Ögrenci</label>
         <select asp-for="OgrenciId" asp-items ="ViewBag.Ogrenciler" class="form-select">
            <option value="">Öğrenci seçiniz</option>
         </select>
         
    </div>

     <div class="mb-3">
        <label asp-for="KursId" class="form-label"> Kurs</label>
         <select asp-for="KursId" asp-items ="ViewBag.Kurslar" class="form-select">
             <option value="">Kurs seçiniz</option>
         </select>
         
    </div>


    <Button type="submit" class="btn btn-secondary">Kaydet</Button>

</form>