@model Ogretmen

<h2 style="color: rgb(46, 0, 46); font-family: 'Indie Flower', cursive; font-size: 2em; font-weight: bold; text-decoration: underline;">Öğretmen Ekle</h2>
<hr></hr>
<form asp-controller="Ogretmen" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Ögretmen Adı</label>
         <input asp-for="Ad" class="form-control">
    </div>

     <div class="mb-3">
        <label asp-for="Soyad" class="form-label">Ögretmen Soyadı</label>
         <input asp-for="Soyad" class="form-control">
    </div>

     <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Eposta</label>
         <input asp-for="Eposta" class="form-control">
    </div>

     <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon</label>
         <input asp-for="Telefon" class="form-control">
    </div>
    
     <div class="mb-3">
        <label asp-for="BaslamaTarihi" class="form-label">Başlama Tarihi</label>
         <input asp-for="BaslamaTarihi" class="form-control">
    </div>

    <Button type="submit" class="btn btn-secondary">Kaydet</Button>

</form>