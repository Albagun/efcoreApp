@model KursViewModel

<h2 style="color: rgb(46, 0, 46); font-family: 'Indie Flower', cursive; font-size: 2em; font-weight: bold; text-decoration: underline;">Kurs Güncelle</h2>
<hr>

<div class="row">
    <div class="col-8"><form asp-controller="Kurs" asp-action="Edit" method="post">
       <div asp-validation-summary="All"></div>
     <input type="hidden" asp-for="KursId">

    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Kurs Adı</label>
         <input asp-for="Baslik" class="form-control">
    </div>
     <div class="mb-3">
        <label asp-for="OgretmenId" class="form-label">Ögretmen</label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <Button type="submit" class="btn btn-secondary">Kaydet</Button>

</form></div>

  <div class="col-4">
    <h4>Öğrenciler</h4>
    <hr>

    <ul>
        @foreach (var item in @Model.KursKayitlari)
        {
              <li>@item.Ogrenci.AdSoyad  </li>
        }
    </ul>
  </div>

</div>

