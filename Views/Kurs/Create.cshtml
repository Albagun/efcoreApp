@model KursViewModel

<h2 style="color: rgb(0, 37, 46); font-family: 'Indie Flower', cursive; font-size: 2em; font-weight: bold; text-decoration: underline;">Kurs Ekle</h2>
<hr></hr>
<form asp-controller="Kurs" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Kurs Başlığı</label>
         <input asp-for="Baslik" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="OgretmenId" class="form-label">Ogretmen</label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>


    <Button type="submit" class="btn btn-secondary">Kaydet</Button>

</form>